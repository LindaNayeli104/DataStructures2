
public class Recursion {

	public static int min (int[] arr) {
		return min(arr, 0);
	}
	
	
	public static int min (int[] arr, int i) {
		if(i==arr.length-1) {
			return arr[i];
		}else {
			return arr[i]<min(arr, i+1) ? arr[i] : min(arr, i+1);
		}
	}
	
	
	public static void main(String[] args) {
		int[] arr = {3,2,5,3,};
		System.out.println(min(arr));
	}
	
}


